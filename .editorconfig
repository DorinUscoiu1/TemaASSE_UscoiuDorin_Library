root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4

# Keep StyleCop analyzers happy with XML docs formatting
csharp_new_line_before_open_brace = all

[*.json]
indent_style = space
indent_size = 2